<div class="modal_box">
	<button class="prev_button">previous</button>
	<div class="modal_item modal_image">
		<img class="modal_book_cover" src="{{img_url}}">
	</div>
	<div class="modal_item close">
		<button class="close_button">close</button>
	</div>
	
	<div>
		<h4>{{title}}</h4>
		<h5 class="author modal_p">{{author.username}}</h5>
		<p class="clearfix">{{content}}</p>
		<div class="tags_container">
			{{#each tags}}
		    <button data-id="{{id}}">{{name}}</button>
		  {{/each}}
		</div>
	</div>
	<button class="next_button">next</button>
</div>
