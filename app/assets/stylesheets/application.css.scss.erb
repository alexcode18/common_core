@import url(https://fonts.googleapis.com/css?family=Raleway:400,500,600,700);


.clearfix:after {
	visibility: hidden;
	display: block;
	font-size: 0;
	content: " ";
	clear: both;
	height: 0;
}

body {
	font-family: 'Raleway', Arial, sans-serif;
	font-size: 12pt;
	letter-spacing: 2px;
	/*background: rgb(122, 204, 200);*/
	background-image: url(http://www.sibagraphics.com/backs/images/wood/june0611.jpg);
	/*background-repeat: no-repeat;*/
  background-attachment: fixed;
}

header {
	background: rgb(122, 204, 200);
	box-shadow: 0px 2px 8px black;
	line-height:15px;
	position: fixed;
	top: 0;
	left: 0; 
	z-index: 21;
	width: 100%;
	padding-top: 13px 20px;
}

header a {
	text-decoration: none;
	color: white;
}

h1 {
	text-transform: uppercase;
	color: black;
	font-size: 30px;
	/*text-shadow: 2px 2px 0px black;*/
	letter-spacing: 5px;
	width: 100%;
	padding: 25px 0px;
	cursor: pointer;
}

h1, h2 {
	padding-left: 20px;
}

h2 {
	color: black;
	width: 60%;
	line-height: 20px;
	padding-bottom: 15px;
}

h3 {
	padding-top: 10px;
	font-size: 16pt;
	line-height: 25px;
}

h4 {
	font-weight: bold;
	padding: 10px;
}

h3, h4 {
	text-align: center;
}

p {
	padding: 5px;
}

#menu {
	width: 100%;
	background: white/*#99161F*/;
}

#tags_list {
	display: none;
}

#tags_list li{
	padding: 10px 20px;
}

#open_menu {
	height: 20px;
	border-top: 1px solid black;
	background: #6D9D31;
	padding-bottom: 5px;
	padding-top: 10px;
	text-align: center;
	color: white;
	cursor: pointer;
}

#open_menu:hover {
	opacity: .8;
}

button {
	background: none;
	border: none;
	letter-spacing: 2px;
	font-size: 13px;
	box-shadow: 2px 2px 0px black;
	background: white;
	font-weight: bold;
	padding: 3px 9px;
	margin: 2px;
	border: 1px solid black;
}

button:hover {
	box-shadow: 1px 1px 0px black;
	border: 1px solid #B62025;
	color: #B62025;
}

/* z-index can only be applied to an element that's absolutely positioned */
#popup {
	position: absolute;
	z-index: 20;
	display: none;
}

#popup_book {
	background: white;
	top: 25%;
	left: 15%;
	right: 15%;
	/*height: 320px;*/
	box-shadow: 0px 2px 8px black;
}

#popup_book,
#popup_bkgd {
	position: fixed;
}

#popup_bkgd {
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: white;
	opacity: 0.6;
}

.arrow {
	position: absolute;
	height: 100px;
	top: 140px;
}

.prev_button {
	left: -40px;
}

.next_button {
	right: -40px;
}

.close_button {
	position: absolute;
	top: 0;
	right: 0;
	padding:10px 12px;
}

#container,
#columns {
	margin: 0 auto;
}

#container {
	margin-top: 200px;
}

#columns {
	width: 100%;
	padding: 20px;
}

.post_box {
	background: white;
	box-shadow: 0px 2px 6px black;
	display: inline-block;
	overflow: hidden;
	height: 300px;
	float: middle;
	position: relative;
	margin: 10px;
	border: 4px solid white;
	cursor: pointer;
}

.thumbnail,
.modal_book_cover {
	height: 300px;
}

.thumbnail {
	float: left;
}

.modal_book_cover {
	height: 300px;
	padding: 10px;
	padding-right: 20px;
}

.modal_pic_div {
	float: left;
}

.book_info {
	padding:20px;
}

.book_hover {
	display: none;
  position: absolute;
  color: white;
  z-index: 4;
  background: rgba(109, 157, 49, 0.9);
  height: 500px;
  overflow: hidden;
  padding: 20px 0px;
}

.book_hover h1 {
	padding: 6px;
}

#container link{
	color: #2289E3;
}

#adams_logo {
	padding: 10px;
	padding-top: 20px;
	position: fixed;
	top: 0px;
	right: 25px;
	z-index: 23;
	background: white;
}

#adams_logo a{
	text-decoration: none;
	color: black;
}

#adams_logo p{
	font-size: 8pt;
}

#adams_logo img{
	width: 150px;
}