@import url(https://fonts.googleapis.com/css?family=Raleway:400,500,600,700);


.clearfix:after {
	visibility: hidden;
	display: block;
	font-size: 0;
	content: " ";
	clear: both;
	height: 0;
}

body {
	font-family: 'Raleway', Arial, sans-serif;
	font-size: 12pt;
	letter-spacing: 2px;
	/*background-image: url(http://st.depositphotos.com/1172692/1394/v/110/depositphotos_13945307-Grey-polka-dots-on-white-background-retro-seamless-vector-pattern-or-texture.jpg);*/
}

header {
	background: #B62025;
	box-shadow: 0px 2px 8px black;
	line-height:15px;
	position: fixed;
	top: 0;
	left: 0; 
	z-index: 21;
	width: 100%;
	padding-top: 20px;
}

header a {
	text-decoration: none;
	color: white;
}

h1 {
	text-transform: uppercase;
	color: white;
	font-size: 30px;
	text-shadow: 2px 2px 0px black;
	letter-spacing: 5px;
	width: 100%;
	padding:20px 0px;
	padding-top: 0;
	text-align: center;
	border-bottom: 1px solid white;
}

h3 {
	font-size: 16pt;
}

h4 {
	font-weight: bold;
}

h3, h4 {
	text-align: center;
	padding: 5px;
}

p {
	padding: 5px;
}

#menu {
	width: 100%;
	background: white/*#99161F*/;
}

#tags_list {
	display: none;
}

#tags_list li{
	padding: 10px 20px;
}

#open_menu {
	height: 20px;
	border-top: 1px solid white;
	background: #6D9D31;
	padding-bottom: 5px;
	padding-top: 10px;
	text-align: center;
}

button {
	background: none;
	border: none;
	letter-spacing: 2px;
	font-size: 13px;
	box-shadow: 2px 2px 0px black;
	/*border-radius: 10%;
	-moz-border-radius: 10%;
	-webkit-border-radius: 10%;
	width: 90%;*/
	background: white;
	font-weight: bold;
	padding: 3px 9px;
	margin: 2px;
	border: 1px solid black;
}

button:hover {
	box-shadow: 1px 1px 0px black;
	border: 1px solid #B62025;
	color: #B62025;
}

#popup {
	display: none;
}

#popup_book {
	background: white;
	z-index: 21;
	top: 20%;
	left: 15%;
	right: 15%;
	height: 310px;
	box-shadow: 0px 2px 8px black;
}

#popup_book,
#popup_bkgd {
	position: fixed;
}

#popup_bkgd {
	z-index: 20;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: white;
	opacity: 0.6;
}

.arrow {
	position: absolute;
	top: 45%;
}

.prev_button {
	left: -40px;
}

.next_button {
	right: -40px;
}

.close_button {
	position: absolute;
	top: 0;
	right: 0;
}

#container,
#columns {
	margin: 0 auto;
	z-index: 1;
}

#container {
	margin-top: 120px;
}

#columns {
	/*column-width: 220px;
	-webkit-column-width: 220px;
	-moz-column-width: 220px;
	-o-column-width: 220px;
	-ms-column-width: 220px;
	column-gap: 2px;
	-webkit-column-max-gap: 2px;
	-moz-column-gap: 2px;
	-o-column-gap: 2px;
	-ms-column-gap: 2px;*/
	width: 100%;
	padding: 20px;
}

.thumbnail,
.modal_image {
	height: 300px;
}

.modal_image {
	padding: 10px;
}

.post_box {
	background: white;
	box-shadow: 0px 2px 6px grey;
	/*-ms-column-break-inside: avoid;
	-moz-column-break-inside: avoid;
	-webkit-column-break-inside: avoid;
	-o-column-break-inside: avoid;
	column-break-inside: avoid;*/
	display: inline-block;
	overflow: hidden;
	height: 300px;
	float: middle;
	position: relative;
	margin: 10px;
	border: 4px solid white;
}

.book_hover {
	display: none;
  position: absolute;
  color: white;
  z-index: 4;
  background: rgba(109, 157, 49, 0.9);
  height: 300px;
  overflow: hidden;
}

#container link{
	color: #2289E3;
}