@import url(http://fonts.googleapis.com/css?family=Raleway:400,500,600,700);


.clearfix:after {
	visibility: hidden;
	display: block;
	font-size: 0;
	content: " ";
	clear: both;
	height: 0;
}

body {
	font-family: 'Raleway', Arial, sans-serif;
	letter-spacing: 2px;
	background-image: url(http://st.depositphotos.com/1172692/1394/v/110/depositphotos_13945307-Grey-polka-dots-on-white-background-retro-seamless-vector-pattern-or-texture.jpg);
}

header {
	background: green;
	height: 20px;
	padding: 20px;
	box-shadow: 0px 2px 8px black;
	line-height:15px;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 21;
	width: 100%;
}

header a {
	text-decoration: none;
	color: white;
}

header li {
	display: inline;
	color: white;
	padding: 5px 10px;
	margin: 0 5px;
	cursor: pointer;
	border-radius: 10px;
	box-shadow: 0px 0px 6px black;
}

header li:hover {
	box-shadow: 0px 0px 3px black;
}

h1 {
	text-transform: uppercase;
	float: left;
	margin: 0px auto;
	color: white;
	font-size: 30px;
	text-shadow: 2px 2px 0px black;
	letter-spacing: 5px;
}

h4 {
	text-align: center;
	font-weight: bold;
	font-size: 18px;
	padding:20px;
}

#popup {
	display: none;
}

#popup_book {
	background: white;
	z-index: 20;
	top: 20%;
	left: 15%;
	right: 15%;
	height: 60%;
}

#popup_book,
#popup_bkgd {
	position: fixed;
/*	z-index: 20px;*/
}

#popup_bkgd {
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: white;
	opacity: 0.3;
}

.prev_button,
.modal_image {
	float: left;
}

.close_button,
.next_button {
	float: right;
}

#container,
#columns {
	margin: 0 auto;
}

#container {
	margin-top: 100px;
}

#columns {
	padding:5px;
	column-width: 220px;
	-webkit-column-width: 220px;
	-moz-column-width: 220px;
	-o-column-width: 220px;
	-ms-column-width: 220px;
	column-gap: 2px;
	-webkit-column-max-gap: 2px;
	-moz-column-gap: 2px;
	-o-column-gap: 2px;
	-ms-column-gap: 2px;
	width: 95%;
}

.post_box {
	background: white;
	box-shadow: 0px 2px 6px grey;
	-ms-column-break-inside: avoid;
	-moz-column-break-inside: avoid;
	-webkit-column-break-inside: avoid;
	-o-column-break-inside: avoid;
	column-break-inside: avoid;
	display: inline-block;
	overflow: hidden;
	width:220px;
}

.post_box {
	position: relative;
}

.book_hover {
	display: none;
  position: absolute;
  z-index: 4;
  background: rgba(255, 255, 255, 0.8);
  width: 220px;
  overflow: hidden;
}

.thumbnail {
	width: 220px;
	z-index: 1;
}

.big_image {
	max-width: 600px;
}

.author_pic {
	width: 150px;
	height: 150px;
	overflow: hidden;
	border-radius: 75px;
	-moz-border-radius: 75px;
	-webkit-border-radius: 75px;
	border: 0;
}

#container link{
	color: #2289E3;
}

.post_stat {
	font-size: 10pt;
	border-top: 1px solid lightgrey;
	padding-top: 10px;
}