@import url(https://fonts.googleapis.com/css?family=Raleway:400,500,600,700);
@import url(http://fonts.googleapis.com/css?family=Droid+Serif);

.clearfix:after {
	visibility: hidden;
	display: block;
	font-size: 0;
	content: " ";
	clear: both;
	height: 0;
}

html {
	overflow-y: scroll;
}

body {
	font-family: 'Raleway', Arial, sans-serif;
	font-size: 10pt;
	letter-spacing: 2px;
	background-attachment: fixed;
}

header .row {
	/*position: fixed;
	top: 0;
	left: 0; 
	z-index: 21;*/
	width: 100%;
	/*padding-top: 13px 20px;*/
	margin: auto -15;
}

header {
	background: rgb(122, 204, 200);
	line-height:15px;
}

a {
	color: inherit;
	text-decoration: none;
}

header a {
	text-decoration: none;
	color: white;
}

a:hover {
	text-decoration: none;
	color: darkblue;
}

#adams_header {
	background: white;
	padding: 7px 20px 5px;
}

#adams_header a{
	text-decoration: none;
	color: black;
}

#adams_header ul{
	float: right;
	margin-left: 2%;
}

#adams_header li {
	line-height: 18px;
}

#adams_header li:nth-child(2){
	font-size: 10pt;
}

#adams_logo {
	float: left;
}

#adams_logo img{
	width: 150px;
	margin: -12px -20px -5px;
}

#adams_logo p{
	margin-top: -5px;
	margin-left: -19px;
	padding: 0 5px;
	font-size: 8pt;
}
.thumbnail {
	/*width: 100%;*/
	margin: 0 auto;
	height: 260px;
	padding: 0;
	border-radius: 0px;
	-moz-border-radius: 0px;
	-webkit-border-radius: 0px;
	-o-border-radius: 0px;
}
h1 {
	/*text-transform: uppercase;*/
	color: black;
	font-size: 30px;
	letter-spacing: 5px;
	width: 100%;
	padding: 15px 0px 10px;
	cursor: pointer;
	line-height: 30px;
}

h1, h2 {
	padding-left: 20px;
	padding-right: 20px;
}

h2 {
	color: black;
	width: 100%;
	line-height: 20px;
	padding-bottom: 15px;
}

h3 {
	padding-top: 10px;
	font-size: 14pt;
	line-height: 25px;
}

h4 {
	font-weight: bold;
	padding: 10px;
	font-size: 12pt;
}

h3, h4 {
	text-align: center;
}

p {
	padding: 10px;
}

#menu {
	width: 100%;
	background: #7accc8;
	overflow-x: scroll;
	-webkit-box-shadow: inset -4px 0px 29px -8px rgba(0,0,0,0.75);
	-moz-box-shadow: inset -4px 0px 29px -8px rgba(0,0,0,0.75);
	-o-box-shadow: inset -4px 0px 29px -8px rgba(0,0,0,0.75);
	box-shadow: inset -4px 0px 29px -8px rgba(0,0,0,0.75);

}

#jPanelMenu-menu {
	overflow-y: scroll;
}

#tags_list {
	/*display: none;*/

}

#tags_list li{
	padding: 10px 20px;
}

.btn {
	background: white;
	border-radius: 0px;
	padding: 2px 5px;
	font-size: 9pt;
	margin: 1px 0;
	white-space: normal;
}

.btn:hover {
	opacity: .7;
}

.tag {
    background: #7accc8;
    border: none;
    border-radius: 0px;
    border-top: 0px solid black;
    padding: 5px 10px;
}

.tag:hover {
	border: 0;
	opacity: .8;
	color: black;
}

#open_menu {
	height: 20px;
	border-top: 1px solid black;
	background: #6D9D31;
	padding-bottom: 5px;
	padding-top: 10px;
	text-align: center;
	color: white;
	cursor: pointer;
}

#open_menu:hover {
	opacity: .8;
}

button,
#buy_button {
	/*background: rgb(122, 204, 200);*/
	border: none;
	letter-spacing: 2px;
	font-size: 14px;
	color: black;
	border: 1px solid #6D9D31;
	border-radius: 6px;
	-o-border-radius: 6px;
	-moz-border-radius: 6px;
	-webkit-border-radius: 6px;
	/*box-shadow: 2px 2px 0px grey;*/
	background: white;
	/*font-weight: bold;*/
	padding: 5px 9px;
	margin: 4px;
	/*border: 1px solid black;*/
}

#buy_button:hover,
button:hover {
	background: rgb(122, 204, 200);
	color: white;
	border: 1px solid rgb(122, 204, 200);
}

/* z-index can only be applied to an element that's absolutely positioned */
#popup {
	position: absolute;
	z-index: 20;
	display: none;
}

#popup_book {
	background: white;
	top: 10%;
	left: 10%;
	right: 10%;
}

#popup_book,
.close_button {
	box-shadow: 0px 2px 8px black;
}

#popup_book h3{
	color: #6D9D31;
}

#popup_book,
#popup_bkgd {
	position: fixed;
}

#popup_bkgd {
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: white;
	opacity: 0.6;
}

#book_description {
	font-family: 'Droid Serif', serif;
	letter-spacing: 1px;
	line-height: 22px;
	text-indent: 20px;
}

#buy_button {
	margin: 20px 0;
	float: right;
	text-transform: uppercase;
	background: #6D9D31;
	color: white;
}

.arrow {
	border: none;
	border-radius: 0;
	-o-border-radius: 0;
	-moz-border-radius: 0;
	-webkit-border-radius: 0;
	position: absolute;
	height: 100%;
	top: -4px;
}

.prev_button {
	left: -4px;
	border-right: 1px solid lightgrey;
}

.next_button {
	right: -4px;
	border-left: 1px solid lightgrey;
}

.close {
	opacity: inherit;
}

.close:hover {
	opacity: 1;
}

.close_button {
	position: absolute;
	top: 0;
	right: -50px;
	padding:10px 10px 10px 11px;
	border: none;
	z-index:200;
}

.close_button:hover {
	background-color: #7accc8;
	opacity: 1;
}

.post_box,
.grid-item {
	/*background-image: url(http://www.sibagraphics.com/backs/images/wood/june0611.jpg);*/
	overflow: hidden;
	border: 0px solid white;
	cursor: pointer;
	padding-top: 30px;
	padding-bottom: 30px;
}

.remove-padding-left {
	padding-left: 0px;
}

.remove-padding-right {
	padding-right: 0px;
}

.extra-padding-bottom {
	padding-bottom: 20px;
}

.extra-padding-left {
	padding-left: 20px;
}

.extra-padding-right {
	padding-right: 20px;
}

#book_screen {
	padding-top: 0px;
	overflow-y: scroll;
	background-image: url('http://www.sibagraphics.com/backs/images/wood/june0611.jpg');
}

#book_screen .row {
	margin-left: 0px;
	margin-right: 0px;
}

.modal_book_cover {
	height: 300px;
	padding: 20px 40px;
}

.modal_pic_div {
	float: left;
}

.book_info {
	padding:40px;
}

.book_hover {
	display: none;
	position: absolute;
	top: 0;
	left: -1px;
	color: white;
	z-index: 4;
	background: rgba(109, 157, 49, 0.9);
	width: 100%;
	height: 100%;
	overflow: hidden;
	padding: 50px 20px 20px;
}

.book_hover h1 {
	padding: 6px;
}

#container link{
	color: #2289E3;
}

#adams_header {
	background: white;
	padding: 8px 20px;
}

#adams_header a{
	text-decoration: none;
	color: black;
}

#adams_header ul{
	float: right;
	margin-left: 7%;
}

#adams_header li {
	line-height: 18px;
}

#adams_header li:nth-child(2){
	font-size: 10pt;
}

#adams_logo {
	float: left;
}

#adams_logo img{
	width: 150px;
	padding-left: 20px;
	padding-top: 13px;
}

footer {
	background: white;
	box-shadow: 0px 2px 8px black;
	line-height:15px;
	position: fixed;
	bottom: 0;
	left: 0; 
	z-index: 21;
	width: 100%;
	padding-top: 13px 20px;
	text-align: center;
}

footer li {
	display: inline-block;
}

footer img {
	height: 30px;
	padding: 10px;
}

footer li:last-child img{
	height: 25px;
}

#open-search {
	font-size: 10pt;
	color: white;
	padding-top: 14px;
	cursor: pointer;
}

#open-search:hover {
	opacity: .6;
}



@media only screen and (max-width : 995px) {

	footer,
	h2 {
		display: none;
	}

	#popup_book {
		top: 5%;
	}

}


@media only screen and (max-width : 580px) {
	
	header ul {
		display: none;
	}

	h1 {
		font-size: 10pt;
		padding-bottom: 10px;
		padding-top: 10px;
		letter-spacing: 1px;
	}

	#adams_logo p {
		display: none;
	}

	#popup_book h3 {
		padding-top: 0px;
	}

	#popup {
		z-index: 22;
	}

	#popup_book {
		width: 100%;
		height: 100%;
		margin: 0;
		top: 0;
		left: 0;
		right: 0;
		box-shadow: none;
		overflow: scroll;
	}

	.modal_book_cover {
		width: 50%;
		height: auto;
		margin: 0 25%;
		padding: 20px 10px;
	}

	.modal_pic_div {
		float: none;
	}

	.modal_item {
		padding-top: 0;
	}

	.close_button {
		top: 20px;
		right: 40px;
		padding:10px 12px;
	}

}